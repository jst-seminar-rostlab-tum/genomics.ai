{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Genomics.ai ",
    "description": "Genomics.ai is a platform to annotate and visualise single-cell sequencing data using neural networks (e.g. for cancer research). The visualisation of annotation results is realised using a UMAP.",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/auth": {
      "post": {
        "summary": "Authenticate user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"],
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "msg": { "type": "string" },
                "user": { "type": "string" },
                "jwt": { "type": "string" }
              }
            }
          },
          "400": {
            "description": "Failed. Bad post data."
          }
        }
      }
    }
  }
}
