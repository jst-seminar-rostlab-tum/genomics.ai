{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "outDir": "./build/",
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/*",
    "./src/**/*"
  ]
}